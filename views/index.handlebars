<div class="available">
    <h3>Hi, my name is Lil' Angus!</h3>

    <div class="byoburger">
    <form class="burger-creator" method="POST" action="/burgers">
        <label>
            What type of burger would you like to add to the menu?
        </label>
        <input type="text" name="new-burger" id="new-burger" placeholder="Ex: Turkey Burger">
        <button type="submit" id="add-burger">Add to Menu</button>
    </form>
</div>

    <ul>
        {{#each burger_data}}
        {{#unless devoured}}
            <li>{{burger_name}}</li>
            <button type="submit" id="devour-button" data-id={{id}}>Eat-Da-Burger!</button>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="available">
    <h3>Eaten Burgers</h3>
    <ul>
        {{#each burger_data}}
        {{#if devoured}}
            <li>{{burger_name}}</li>
            {{/if}}
        {{/each}}
    </ul>
</div>




<div class="devoured">
    <h3></h3>
    <div class="eaten">
    </div>
</div>